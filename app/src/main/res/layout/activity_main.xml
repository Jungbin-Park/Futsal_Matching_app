<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ddcccc"
        android:layout_weight="3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="순위"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#ccddcc">

        <Button
            android:id="@+id/btnTeamMake"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_margin="30dp"
            android:text="@string/btnTeamMake"/>
        <Button
            android:id="@+id/btnTeamLoad"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_margin="30dp"
            android:text="@string/btnTeamLoad"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="#ccccdd">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="매칭 공고 리스트"/>
    </LinearLayout>
</LinearLayout>