<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeTeamActivity">
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="팀 이름: "
            android:textSize="15sp"></TextView>

        <EditText
            android:id="@+id/editTeamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="3"
            android:textSize="15sp"
            android:hint="팀 이름을 작성하시오"></EditText>
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="주장 성함: "
            android:textSize="15sp"></TextView>

        <EditText
            android:id="@+id/editCaptainName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="3"
            android:textSize="15sp"
            android:hint="주장 성함을 작성하시오"></EditText>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="팀 인원: "
            android:textSize="15sp"></TextView>

        <EditText
            android:id="@+id/editTeamMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="3"
            android:textSize="15sp"
            android:hint="팀 인원을 작성하시오"></EditText>
    </TableRow>

     <TableRow>
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="등록하기"
            android:textSize="20sp"
            android:layout_weight="1"></Button>
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="취소하기"
            android:textSize="20sp"
            android:layout_weight="1"></Button>
    </TableRow>
</TableLayout>